generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model SaleRecord {
  id        Int      @id @default(autoincrement())
  year      Int
  month     Int
  store     String
  revenue   Float
  quantity  Int
  checks    Int
  syncedAt  DateTime @default(now())
}

model SyncLog {
  id        Int      @id @default(autoincrement())
  syncedAt  DateTime @default(now())
  rowsCount Int
  status    String
  message   String?
}